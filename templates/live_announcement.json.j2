{%- set twitch_channel = TWITCH_CHANNEL | default('YourChannel') -%}
{
  "username": "{{ BOT_USERNAME | default('Live Alert Bot') }}",
  "avatar_url": "{{ BOT_AVATAR_URL | default('') }}",
  "content": "{{ message_prefix | default('') }}{{ message | default('We are live!') }}",
  "embeds": [
    {
      "title": "{{ title | default('We\'re LIVE!') }}",
      "url": "https://twitch.tv/{{ twitch_channel }}",
      "description": "{{ description | default('Come hang out!') }}",
      "color": {{ (color | default(DEFAULT_COLOR)) | int(base=0) }},
      "thumbnail": {"url": "{{ thumbnail_url | default('') }}"},
      "image": {"url": "{{ banner_url | default('') }}"},
      "footer": {{ embed_footer(footer_text | default('Join us in chat!')) | tojson }},
      "timestamp": "{{ embed_timestamp() }}"
    }
  ],
  "allowed_mentions": {"parse": []}
}
