{
  "username": "{{ BOT_USERNAME | default('Schedule Bot') }}",
  "avatar_url": "{{ BOT_AVATAR_URL | default('') }}",
  "content": "{{ message_prefix | default('') }}{{ message | default('Here\'s the schedule!') }}",
  "embeds": [
    {
      "title": "{{ title | default('Stream Schedule') }}",
      "description": "{{ description | default('Upcoming shows and events.') }}",
      "image": {"url": "{{ image_url | default('') }}"},
      "color": {{ (color | default(DEFAULT_COLOR)) | int(base=0) }},
      "fields": [
        {% for slot in slots | default([]) %}
        {{ embed_field(slot.name, slot.value, slot.inline | default(false)) | tojson }}{% if not loop.last %},{% endif %}
        {% endfor %}
      ]
    }
  ],
  "allowed_mentions": {"parse": []}
}
